  <div class="col-sm-12">
    <center><%= button_to "New Conflict Resolution Reading", spread_spread3_path, :class => "btn btn-primary", :method => :get %></center>
  </div><!--col-sm-12-->
</div><!--row-->

  <div class="spacer">
  <p>&nbsp;</p>
</div><!--spacer--> 

</div> <!-- closes container -->

