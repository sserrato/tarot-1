    }); //secondcard

    $("#thirdcard").on("click", function() {
      $('.thirdcard-hidden').css("display", "block");
    }); //thirdcard

    $("#fourthcard").on("click", function() {
      $('.fourthcard-hidden').css("display", "block");
    }); //fourthcard
  }); //jQuery(document)
</script>

